body {
    font-family: "Josefin Sans", sans-serif;
    color: lightgrey;
    background-color: darkslategrey;
}

header {
    opacity: 100%;
    color: lightgrey;
    background-color: darkslategrey;
}

.card {
    background-color: lightgrey;
    color: darkslategrey;
    border-radius: 0;
}

.sold {
    opacity: 50%;
}

.soldStamp {
    display: block;
}

.square {
    width: 100%;
    height: 0;
    padding-top: 100%;
    position: relative;
    background-color: darkslategrey;
}

.squareContent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    object-fit: contain;
    /* object-position: -50%; */
}

.squareContentTall {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    object-fit: contain;
    /* object-position: -50%; */
}

h4 {
    font-size: large;
}

.btnCardPurchase {
    color: lightgrey;
    background-color: darkslategrey;
    border-radius: 0;
    font-size: xx-large;
    display: none;
}

.btnBid {
    color: darkslategrey;
    background-color: lightgrey;
    border-radius: 0;
    font-size: x-large;
}

.popupPic {
    object-fit: contain;
    width: 100%;
}

.modal-content {
    background-color: darkslategrey;
}

.modal-header {
    color: lightgrey;
}

.btn-close {
    color: lightgrey;
}